<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-logo">
    <%= link_to root_path do %>
      <i class="fa fa-bolt" aria-hidden="true"></i>
       <div>Weada</div>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" class="avatar dropdown-toggle" id="navbar-wagon-menu"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to dashboard_path do %>
                <i class="fa fa-cloud"></i> Planning
              <% end %>
            </li>
            <li>
              <%= link_to activities_path do %>
                <i class="fa fa-sun"></i>  Create
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-bolt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">

      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="dashbo">Home</a></li>
        <li><a href="#">Create Schedule</a></li>
        <li><a href="#">About</a></li>
      </ul>
    </div>
  </div>
</div>

