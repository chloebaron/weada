<div class="wrapper login">
  <div class="routine-form-wrapper container">
    <div class="routine-form login-form">
      <h2> Log In</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%# f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, wrapper_html: { class: 'time-field-group form-group' }  %>
        <%= f.input :password, required: false, wrapper_html: { class: 'time-field-group form-group' }  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: 'btn btn-primary btn-md' %>
      </div>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
    <div class="banner-vertical login-banner">
      <%= image_tag "login.png" %>
    </div>

</div>
