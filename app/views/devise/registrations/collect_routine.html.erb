<div class="wrapper routine ">
  <div class="banner-vertical">
    <%= image_tag "clock.png" %>
  </div>
  <div class="routine-form-wrapper container">
    <div class="routine-form">
      <h2>Letâ€™s get started! Tell us a bit about your routine.</h2>
      <%= form_tag(new_user_registration_path, method: "get") do %>
          <div class="time-field-group form-group">
            <%= label_tag(:wake_up_hour, "Wake Up Time") %>
            <%= text_field_tag(:wake_up_hour, "", class: 'form-control routine', id: "wake_up_hour")%>
          </div>
          <div class="time-field-group form-group">
            <%= label_tag(:sleep_hour, "Sleep Time") %>
            <%= text_field_tag(:sleep_hour, "", class: 'form-control routine', id: "sleep_hour")%>
          </div>
        <h3>If you work Monday-Friday, tell us your work hours.</h3>
          <div class="time-field-group form-group">
            <%= label_tag(:start_time, "Start Time") %>
            <%= text_field_tag(:start_time, "", class: 'form-control routine', id: "start_time")%>
          </div>
          <div class="time-field-group form-group">
            <%= label_tag(:end_time, "End Time") %>
            <%= text_field_tag(:end_time, "", class: 'form-control routine', id: "end_time")%>
          </div>
          <div class="text-center">
            <%= submit_tag("Next", class: "btn btn-primary btn-md") %>
          </div>
      <% end %>
    </div>
  </div>
</div>


