<div class="routine-flexbox-wrapper">
  <div id="routine-form-wrapper" class="container">
    <div id="routine-form" style="padding-top: 50px;">
      <h4 class="text-center">Great! Letâ€™s connect to your Google Calendar. </h4>
      <p class="text-center">This will allow us to read events in your primary Google calendar and input events into your Weada c calendar.</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name, autofocus: true %>
          <%= f.input :last_name  %>
          <%= f.input :email, required: true%>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :work_start_time, :as => :hidden, :input_html => { :value => params[:work_start_time] } %>
          <%= f.input :work_end_time, :as => :hidden, :input_html => { :value => params[:work_end_time] } %>
          <%= f.input :wake_up_hour, :as => :hidden, :input_html => { :value => params[:wake_up_hour] } %>
          <%= f.input :sleep_hour, :as => :hidden, :input_html => { :value => params[:sleep_hour] } %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" , class: 'btn btn-primary' %>
        </div>
    </div>
    <% end %>
  </div>
