.upcoming-events {
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  border-top: 3px solid $weada-green;
  padding-top: 10px;
}

#user-greeting {
  position: absolute;
  top: 10px;
  left: 20px;
  margin: 20px 0;
}

.dashboard-events {
  margin-top: 20px;
  display: flex;
}

.weekday-col  {
  display: flex;
  align-items: flex-start;
  height: 60%;
  p {
  font-weight: bold;
  font-size: 14px;
  }
}

.column-spacer {
  width: 20px;
  border-left: 2px solid rgba(150,150,150,0.5);
  height: 100%;
  left: 0;
}

.schedule-card {
  background-color: white;
  position: relative;
  font-weight: lighter;
  width: 150px;
  height: 125px;
  border-left: 5px solid;
  box-shadow: 1px 1px 3px rgba(100,100,100,0.5);

  h4 {
    font-size: 14px;
    font-weight: 500;
    margin: 0;
  }
  p {
    font-size: 12px;
    margin: auto;
    font-weight: lighter;
    margin: 0;
  }
}

.btn.btn-create-schedule {
  width: 200px;
  padding: 10px;
  margin: 20px 0;
  background-color: $weada-green;
  a {
    color: white;
    text-decoration: none;
  }
  &:hover {
    opacity: 0.7;
  }
}

.dashboard-icon {
  position: absolute;
  top: 10px;
  right: 10px;
}

.weada-green {
  color: $weada-green;
}
