.routine {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.login {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  height: calc(100vh - 70px);
}

.routine-form.login-form h2 {
  font-size: 40px;
  font-weight: bold;
  color: $weada-green;
}

.routine-form h2 {
  font-size: 24px;
  margin-bottom: 20px;
}

.routine-form h3 {
  font-size: 16px;
  margin-bottom: 20px;
  width: auto;
}

.routine-form p {
  font-size: 16px;
  font-weight: lighter;
  margin-bottom: 20px;
  width: auto;
}

.banner-vertical {
  width: 50%;
  height: 100vh;
  background: linear-gradient(179.71deg, rgba(80, 227, 142, 0) 44.9%, rgba(81, 187, 125, 0.295) 73.01%), rgba(56, 165, 152, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-banner {
  height: calc(100vh - 70px);
}

.routine-form {
  height: 50%;
  width: 70%;
  margin: 0 auto;
  label {
    font-size: 16px;
    font-weight: lighter;
  }
}

.time-field-group {
  display: flex;
  align-items: center;
  justify-content: center;

  &> * {
    width: 50%;
  }
}

.form-control.routine {
  width: 15%;
  margin-right: 15%;
}

.form-control.string {
  width: 75%;
  margin-right: 10%;
}
.form-control.password {
  width: 75%;
  margin-right: 10%;
}

.routine-form-wrapper {
  display:flex;
  justify-content: space-around;
  width: 50%;
}

.routine-flexbox-wrapper {
  height: 100vh;
}

.devise-links {
  font-size: 16px;
  margin-top: 20px;
}
